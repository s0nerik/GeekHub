<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_connection_fragment"
        android:name="com.example.keddreader.fragment.NoConnectionFragment"
        tools:layout="@layout/fragment_no_connection" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_fragment"
        android:name="com.example.keddreader.fragment.RefreshFragment"
        tools:layout="@layout/fragment_refresh" />

</LinearLayout>